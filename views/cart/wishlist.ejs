<!DOCTYPE html>

<html>

<head>

    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" type="text/css" href="/css/cart.css">
    <script src="https://kit.fontawesome.com/f6f38a44e9.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css"
        href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <%- include('../partials/flash') %>
        <%- include('../partials/navbar') %>
            <div class="container">
                <h1 style="color: #45ccb8;"> Wish List</h1>
                <div class="cart">
                    <div class="products">
                        <% for( let index=0;index<curUser.wishList.length;index++ ) { %>
                            <div class="product" id="<%= index+1 %> ">
                                <img src="<%= curUser.wishList[index].images[0].url %> ">
                                <div class="product-info">
                                    <h3 class="product-name">
                                        <%= curUser.wishList[index].name %>
                                    </h3>
                                    <h4 class="product-price">
                                        <%= curUser.wishList[index].price %>
                                    </h4>
                                    <br>
                                    <div class="product-remove">
                                        <a class="mr-3" href="/products/<%=curUser.wishList[index].id%> "><button
                                                class="btn"><i class="fas fa-eye"></i>View</button></a>
                                        <form class="d-inline" method="post"
                                            action="/wishlist/<%= curUser.wishList[index].id %>?_method=DELETE">
                                            <button class="btn submit"><i class="fa fa-trash"
                                                    aria-hidden="true"></i>Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF"
                crossorigin="anonymous"></script>
</body>

</html>